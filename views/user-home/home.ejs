<%include ../common/header %>
  <link rel="stylesheet" href="/stylesheets/home.css">

  <div class="home-page">
    <nav class="nav-bar-home">
      <div class="container row">
        <div class="nav-wrapper">
          <a href="/" class="brand-logo">SETA TEST</a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a class="waves-effect waves-light " href="/">Home</a></li>
            <li><a class="waves-effect waves-light modal-trigger reset-value " href="#add-book">Add Book</a></li>
            <li><a class="logout waves-effect waves-light " href="#">Log out</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="search-bar">
      <div class="container">
        <div class="row search-tool">
          <div class="input-field col">
            <input id="icon_prefix" type="text" class="validate search-name">
            <label for="icon_prefix">Name Book</label>
            <button>
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="books-card">
      <div class="container">
        <div class="row all-books">
        </div>
        <div class="row">
          <!-- Modal Trigger -->
          <!-- Modal Add Book -->
          <form id="add-book" class="modal">
            <div class="modal-content">
              <h4 class="header">Add Book</h4>
              <div class="row name-book ">
                <div class="input-field">
                  <!--   col s12 -->
                  <input id="name-book-add" name="name" type="text" class="validate">
                  <label for="name-book-add">Name Book</label>
                </div>
              </div>
              <div class="row authors">
                <div class="input-field">
                  <!--   col s12 -->
                  <input id="author-book-add" name="author" type="text" class="validate">
                  <label for="author-book-add">Author Book</label>
                </div>
              </div>
              <div class="row descriptions ">
                <div class="input-field col s12">
                  <textarea id="textarea-add" name="description" class="materialize-textarea"></textarea>
                  <label for="textarea-add">Textarea</label>
                </div>
              </div>
              <div class="file-field input-field ">
                <div class="btn">
                  <span>File</span>
                  <input type="file" name="many-images" id="input-many-images" multiple>
                </div>
                <div class="file-path-wrapper">
                  <input class="file-path validate" type="text" placeholder="Upload one or more files">
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <a href="#" class="addBook modal-close waves-effect waves-green btn-flat">Agree</a>
            </div>
          </form>
          <!-- Modal update Book -->
          <form id="update-book" class="modal">


          </form>
          <!-- End -->
          </form>
          <!-- Modal Detail Book -->
          <div id="detail-book" class="modal">


          </div>
          <!-- End -->

        </div>
      </div><!-- book card -->
    </div>

    <%include ../common/footer %>
      <script src="/javascripts/home.js"></script>